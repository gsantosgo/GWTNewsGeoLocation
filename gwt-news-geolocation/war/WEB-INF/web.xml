<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">
    
	<!-- Servlets -->
	<servlet>
		<servlet-name>rssServlet</servlet-name>
		<servlet-class>es.uem.geolocation.server.RSSServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>gateServlet</servlet-name>
		<servlet-class>es.uem.geolocation.server.GateServiceImpl</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>	
	<servlet>
		<servlet-name>geonamesServlet</servlet-name>
		<servlet-class>es.uem.geolocation.server.GeonamesServiceImpl</servlet-class>
		<load-on-startup>1</load-on-startup><!-- Initialize Cache -->
	</servlet>	
  	<servlet>
    	<servlet-name>rssnewsServlet</servlet-name>
     	<servlet-class>es.uem.geolocation.server.RSSNewsServlet</servlet-class>
  	</servlet>
  	
  	<!-- Filters -->
  	<filter>
  		<filter-name>I18nFilter</filter-name>
  		<filter-class>com.teklabs.gwt.i18n.server.I18nFilter</filter-class>
  	</filter>  	
  
	<!--  Servlets Mapping -->
	<servlet-mapping>
		<servlet-name>rssServlet</servlet-name>
		<url-pattern>/gwtnewsgeolocation/rss</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>gateServlet</servlet-name>
		<url-pattern>/gwtnewsgeolocation/gate</url-pattern>		
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>geonamesServlet</servlet-name>
		<url-pattern>/gwtnewsgeolocation/geonames</url-pattern>		
	</servlet-mapping>	
  
  	<servlet-mapping>
    	<servlet-name>rssnewsServlet</servlet-name>
    	<url-pattern>/gwtnewsgeolocation/rssnews</url-pattern>
  	</servlet-mapping>
  	
  	<!-- Filters mapping -->
  	<filter-mapping>
  		<filter-name>I18nFilter</filter-name>
  		<url-pattern>*</url-pattern>
  	</filter-mapping>
  
  	<!-- Default page to serve -->
  	<welcome-file-list>
	    <welcome-file>gwtnewsgeolocation.html</welcome-file>
  	</welcome-file-list>  	

</web-app>
